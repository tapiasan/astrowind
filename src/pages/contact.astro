---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact Simmons Heating & Air | McHenry, Illinois',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <ContactUs
    id="form"
    title="Request a Quote or Schedule Service"
    subtitle="Fill out the form below to request a service quote, schedule an appointment, or ask any questions about our HVAC services. For emergencies, please call us directly."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Service Details & Questions',
    }}
    disclaimer={{
      label:
        'By submitting this form, you consent to us contacting you about your inquiry. Your information will be kept confidential.',
    }}
    description="Our team typically responds within 24 business hours. For urgent needs, please call us directly."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Contact Simmons Heating & Air"
    items={[
      {
        title: 'General Inquiries',
        description: `Questions about our services, pricing, maintenance plans, or scheduling a routine appointment? We're happy to help!`,
      },
      {
        title: 'Emergency Service',
        description:
          'HVAC emergency or urgent repair? We provide 24/7 emergency service for heating and cooling emergencies. Call us anytime!',
      },
      {
        title: 'Commercial Service',
        description:
          'Serving businesses throughout McHenry County with comprehensive HVAC services, maintenance contracts, and priority support.',
      },
      {
        title: 'Phone',
        description: '(815) 123-4567',
        icon: 'tabler:phone',
      },
      {
        title: 'Email',
        description: 'info@simmonsheatingnair.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: 'McHenry, Illinois 60050',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
