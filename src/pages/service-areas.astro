---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Service Areas | Simmons Heating & Air in McHenry, Illinois',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Service Areas"
    title="Serving McHenry County and Surrounding Areas"
    subtitle="Simmons Heating & Air provides professional HVAC services throughout McHenry County and nearby communities in Illinois. Check if we serve your area, and contact us today to schedule service."
    image={{
      src: 'https://placecats.com/800/600',
      alt: 'HVAC Service Area',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Primary Service Areas"
    subtitle="We proudly serve these communities in McHenry County with comprehensive HVAC services"
    columns={3}
    items={[
      {
        title: 'McHenry',
        description: 'Downtown McHenry, residential neighborhoods, and surrounding suburbs',
      },
      {
        title: 'Algonquin',
        description: 'Residential and commercial HVAC services throughout Algonquin',
      },
      {
        title: 'Crystal Lake',
        description: 'Heating and cooling services for homes and businesses in Crystal Lake',
      },
      {
        title: 'Lake in the Hills',
        description: 'Professional HVAC installation and repair in Lake in the Hills',
      },
      {
        title: 'Huntley',
        description: 'Comprehensive heating and cooling services for Huntley area',
      },
      {
        title: 'Woodstock',
        description: 'HVAC maintenance and emergency service in Woodstock',
      },
      {
        title: 'Bull Valley',
        description: 'Residential HVAC services for Bull Valley properties',
      },
      {
        title: 'Garden Prairie',
        description: 'Professional heating and cooling services in Garden Prairie',
      },
      {
        title: 'Marengo',
        description: 'Complete HVAC solutions for Marengo residents and businesses',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    items={[
      {
        title: 'Local Expertise',
        description:
          'As a McHenry-based company, we understand the unique HVAC challenges and climate conditions of our region, allowing us to provide tailored solutions.',
      },
      {
        title: 'Fast Response Times',
        description:
          'Living locally means we can respond quickly to service requests, emergency repairs, and maintenance needs throughout the area.',
      },
      {
        title: 'Community Commitment',
        description:
          "We're invested in serving our community with professional service, fair pricing, and a commitment to customer satisfaction.",
      },
    ]}
    image={{
      src: 'https://placecats.com/800/600',
      alt: 'Service Area Map',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Why Choose a Local HVAC Contractor?
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Features2 Widget ************** -->

  <Features2
    title="Don't See Your Area?"
    tagline="Contact Us"
    columns={1}
    items={[
      {
        title: 'Service Outside Our Listed Areas',
        description:
          "If your community isn't listed above, don't hesitate to reach out! We may service your area or be able to make accommodations for larger projects. Call us at (815) 123-4567 or fill out our contact form to inquire about service availability.",
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Request Service in Your Area',
        href: '/contact',
      },
    ]}
    title="Ready for Professional HVAC Service?"
    subtitle="If Simmons Heating & Air serves your area, contact us today to schedule your heating or cooling service, maintenance, or emergency repair."
  />
</Layout>
