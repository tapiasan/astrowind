---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import SectionHeader from '~/components/ui/SectionHeader.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Layout from '~/layouts/PageLayout.astro';
import HeroImg from '~/assets/images/sam-jotham-sutharson-gSvCiyLnCeU-unsplash.jpg';
const metadata = {
  title: 'HVAC Services | Simmons Heating & Air in McHenry, Illinois',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Services"
    title="Professional HVAC Services for Every Need"
    subtitle="From installation and emergency repairs to preventive maintenance, Simmons Heating & Air offers comprehensive heating and cooling solutions for residential and commercial properties throughout McHenry County."
    actions={[{ variant: 'primary', text: 'Request a Quote', href: '/contact' }]}
    image={{
      src: HeroImg,
      alt: 'Professional HVAC Service',
    }}
  />

  <!-- Features2 Widget ************** -->

  <WidgetWrapper>
    <SectionHeader
      title="Our HVAC Services"
      subtitle="Complete solutions for all your heating and cooling needs, including emergency service 24/7."
    />
    <Features2
      columns={3}
      items={[
        {
          title: 'Furnace Installation',
          description:
            'Professional installation of energy-efficient furnaces with proper sizing, ductwork design, and system testing for optimal comfort.',
          icon: 'tabler:flame',
        },
        {
          title: 'Air Conditioning Service',
          description:
            'AC installation, repair, maintenance, and seasonal tune-ups to keep your cooling system running efficiently all summer.',
          icon: 'tabler:snowflake',
        },
        {
          title: 'Heat Pump Systems',
          description:
            'Installation and maintenance of heat pumps for efficient heating and cooling with lower energy costs year-round.',
          icon: 'tabler:thermometer',
        },
        {
          title: 'Emergency Repairs',
          description:
            'Available 24/7 for urgent HVAC breakdowns, emergency service calls, and system failures when you need us most.',
          icon: 'tabler:alert-circle',
        },
        {
          title: 'Preventive Maintenance',
          description:
            'Regular maintenance plans designed to extend system life, improve efficiency, reduce repair costs, and ensure reliability.',
          icon: 'tabler:tools',
        },
        {
          title: 'Duct Cleaning',
          description:
            'Professional air duct cleaning services to improve indoor air quality and enhance system efficiency.',
          icon: 'tabler:wind',
        },
        {
          title: 'Indoor Air Quality',
          description:
            'Air purification systems, humidifiers, dehumidifiers, and advanced filtration to improve your indoor environment.',
          icon: 'tabler:air-conditioning',
        },
        {
          title: 'Smart Thermostats',
          description:
            'Installation and setup of programmable and smart thermostats for better comfort control and energy savings.',
          icon: 'tabler:smart-home',
        },
        {
          title: 'Commercial Services',
          description:
            'Comprehensive HVAC services for retail, office, and industrial properties with flexible maintenance contracts.',
          icon: 'tabler:building-store',
        },
      ]}
    />
  </WidgetWrapper>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'Licensed & Certified',
        description:
          'All our technicians are professionally licensed, certified, and trained in the latest HVAC technology and industry standards.',
        icon: 'tabler:certificate',
      },
      {
        title: 'Transparent Pricing',
        description:
          'We provide detailed estimates upfront with no hidden fees or surprise charges, so you know exactly what to expect.',
        icon: 'tabler:receipt',
      },
      {
        title: 'Quality Workmanship',
        description:
          'We use high-quality materials, advanced tools, and proven techniques to ensure your HVAC systems are installed and serviced correctly.',
        icon: 'tabler:check',
      },
      {
        title: 'Satisfaction Guarantee',
        description:
          'We stand behind our work with a 100% satisfaction guarantee because your comfort and trust are our top priorities.',
        icon: 'tabler:heart',
      },
    ]}
    image={{
      src: 'https://placecats.com/800/600',
      alt: 'Professional HVAC Service',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Why Choose Simmons?</h3>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Energy Efficiency',
        description:
          'Modern HVAC systems reduce energy costs while maintaining optimal comfort, lowering your heating and cooling expenses.',
        icon: 'tabler:bolt',
      },
      {
        title: 'Fast Response',
        description:
          'Quick scheduling and same-day or next-day service availability for most requests throughout McHenry County.',
        icon: 'tabler:clock',
      },
      {
        title: 'Warranty Protection',
        description:
          'Comprehensive warranties on parts and labor provide peace of mind and protection for your investment.',
        icon: 'tabler:shield',
      },
      {
        title: 'Expert Diagnostics',
        description:
          'Advanced diagnostic tools and skilled technicians identify issues accurately and recommend cost-effective solutions.',
        icon: 'tabler:search',
      },
    ]}
    image={{
      src: 'https://placecats.com/800/600',
      alt: 'HVAC Maintenance Benefits',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Our Benefits</h3>
    </Fragment>
  </Content>

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="What Our Customers Say"
    testimonials={[
      {
        testimonial: `Simmons Heating & Air came out on an emergency service call during a freezing winter night. Their technician was professional, efficient, and got our furnace working perfectly in no time. I couldn't ask for better service!`,
        name: 'Robert Thompson',
        job: 'Homeowner, McHenry',
        image: {
          src: 'https://placecats.com/800/600',
          alt: 'Customer',
        },
      },
      {
        testimonial: `Our office's AC broke down right before an important client meeting. I called Simmons and they were there within hours. The team was courteous, quick, and got us back to comfortable working conditions. Highly recommended!`,
        name: 'Jennifer Davis',
        job: 'Business Owner, Crystal Lake',
        image: {
          src: 'https://placecats.com/800/600',
          alt: 'Customer',
        },
      },
      {
        testimonial: `I've been using Simmons' maintenance plan for two years now. Their preventive service keeps my system running smoothly, and the transparent pricing means no surprises. Great local company!`,
        name: 'Michael Chen',
        job: 'Homeowner, Algonquin',
        image: {
          src: 'https://placecats.com/800/600',
          alt: 'Customer',
        },
      },
    ]}
    callToAction={{
      text: 'Request Your Service Today',
      href: '/contact',
      icon: 'tabler:phone',
    }}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Your Free Quote',
        href: '/contact',
      },
    ]}
    title="Ready for Professional HVAC Service?"
    subtitle="Contact Simmons Heating & Air today to schedule service, request a quote, or ask questions about our comprehensive HVAC solutions for McHenry County."
  />
</Layout>
