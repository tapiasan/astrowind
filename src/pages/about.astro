---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About Simmons Heating & Air | McHenry, Illinois HVAC Contractor',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: 'https://placecats.com/800/600',
      alt: 'HVAC Technician',
    }}
  >
    <Fragment slot="title">
      Trusted HVAC Services for <br />
      <span class="text-accent dark:text-white"> McHenry County Since 2014</span>
    </Fragment>

    <Fragment slot="subtitle">
      Simmons Heating & Air is a locally-owned HVAC contractor dedicated to providing professional, reliable heating and
      cooling services to residential and commercial customers throughout McHenry County, Illinois. With over a decade
      of experience, we've built our reputation on quality workmanship, transparent pricing, and exceptional customer
      service.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="By The Numbers"
    stats={[
      { title: 'Years in Business', amount: '10+' },
      { title: 'Team Members', amount: '25+' },
      { title: 'Happy Customers', amount: '5K+' },
      { title: 'Service Calls', amount: '10K+' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Our Specialties"
    subtitle="We provide a complete range of HVAC services designed to keep your systems running efficiently and reliably throughout the year."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Heating Systems',
        description:
          'Expert installation, repair, and maintenance of furnaces, heat pumps, and boiler systems for comfortable Illinois winters.',
        icon: 'tabler:flame',
      },
      {
        title: 'Cooling Systems',
        description:
          'Professional air conditioning installation, repair, and seasonal maintenance to keep you cool all summer long.',
        icon: 'tabler:snowflake',
      },
      {
        title: 'Emergency Service',
        description:
          'Available 24/7 for urgent HVAC emergencies, breakdowns, and unexpected system failures when you need us most.',
        icon: 'tabler:alert-circle',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Maintenance Plans',
        description:
          'Customized maintenance agreements to keep your HVAC systems running at peak efficiency and extend system lifespan.',
        icon: 'tabler:tools',
      },
      {
        title: 'Indoor Air Quality',
        description:
          'Air purification, duct cleaning, humidification, and advanced filtration systems for healthier indoor environments.',
        icon: 'tabler:wind',
      },
      {
        title: 'System Installation',
        description:
          'Professional installation of high-efficiency heating and cooling systems with proper sizing and optimal ductwork design.',
        icon: 'tabler:tools',
      },
      {
        title: 'Smart Thermostats',
        description:
          'Installation and setup of programmable and smart thermostats for improved comfort control and energy savings.',
        icon: 'tabler:smart-home',
      },
      {
        title: 'Commercial Service',
        description:
          'Comprehensive HVAC services for retail, office, and industrial properties with flexible maintenance contracts.',
        icon: 'tabler:building-store',
      },
      {
        title: 'Seasonal Prep',
        description:
          'Pre-season heating and cooling system inspections and tune-ups to ensure reliability when you need it most.',
        icon: 'tabler:calendar-event',
      },
    ]}
    image={{
      src: 'https://placecats.com/800/600',
      alt: 'Professional HVAC Service',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Core Values"
    subtitle="These principles guide everything we do and drive our commitment to customer satisfaction and professional excellence."
    items={[
      {
        title: 'Customer Satisfaction',
        description:
          'Your comfort and satisfaction are our top priority. We stand behind our work with a 100% satisfaction guarantee and are always available to address your concerns.',
      },
      {
        title: 'Professional Excellence',
        description:
          'Our technicians are licensed, certified, and continuously trained in the latest HVAC technology and industry standards to deliver quality service every time.',
      },
      {
        title: 'Honest Communication',
        description:
          'We believe in transparent pricing, clear explanations of your system issues, and straightforward recommendationsâ€”no hidden fees or upselling.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Why McHenry Residents Choose Us"
    subtitle="Serving our community with integrity, expertise, and unwavering commitment to quality."
    isReversed={true}
    callToAction={{
      text: 'Request Service',
      href: '/contact',
    }}
    items={[
      {
        title: 'Local Knowledge',
        description:
          'As a McHenry-based company, we understand the unique climate challenges and HVAC needs of our community and can provide tailored solutions.',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Customer Reviews',
        description:
          'We take pride in our reputation for excellence and have earned consistently positive reviews and word-of-mouth referrals from satisfied customers throughout McHenry County.',
        icon: 'tabler:star',
      },
      {
        title: 'Industry Leadership',
        description:
          'Our team stays at the forefront of HVAC technology and best practices, ensuring you receive the most current and effective solutions available.',
        icon: 'tabler:certificate',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Serving McHenry County"
    tagline="Service Areas"
    columns={4}
    items={[
      {
        title: 'McHenry',
        description: 'Downtown, suburbs, and surrounding neighborhoods',
      },
      {
        title: 'Algonquin',
        description: 'Fast, reliable service and maintenance',
      },
      {
        title: 'Crystal Lake',
        description: 'Residential and commercial services',
      },
      {
        title: 'And Beyond',
        description: 'Call us to confirm service in your area',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Get in Touch"
    tagline="Contact Us"
    columns={2}
    items={[
      {
        title: 'Schedule Service',
        description:
          'Request a quote, schedule maintenance, or arrange an emergency service call through our convenient online form or by phone.',
        icon: 'tabler:calendar-event',
      },
      {
        title: 'Call for Support',
        description:
          'Speak directly with our friendly team for questions, emergency service needs, or to discuss your HVAC system requirements.',
        icon: 'tabler:phone',
      },
    ]}
  />
</Layout>
