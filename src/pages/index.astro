---
import hvacImage from '~/assets/images/IMG_6703.jpg';
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Simmons Heating & Air | Professional HVAC Services in McHenry, Illinois',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Request a Quote',
        href: '/contact',
        icon: 'tabler:phone',
      },
      { text: 'Our Services', href: '#features' },
    ]}
    image={{ src: hvacImage, alt: 'Professional HVAC System Installation' }}
  >
    <Fragment slot="title">
      Expert HVAC Services for <span class="hidden xl:inline">Your Home & Business</span>
      <span class="text-accent dark:text-white"> in McHenry, Illinois</span>
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="Professional Service:" description="Locally Owned • Licensed & Insured • 24/7 Emergency Availability" />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Services"
    title="Complete HVAC Solutions"
    subtitle="From heating installation to emergency repairs, we provide comprehensive services for residential and commercial properties throughout McHenry County."
    items={[
      {
        title: 'Heating Installation & Repair',
        description:
          'Expert installation and maintenance of furnaces, heat pumps, and boiler systems for reliable warmth during Illinois winters.',
        icon: 'tabler:flame',
      },
      {
        title: 'Air Conditioning Services',
        description:
          'Professional AC installation, repair, and seasonal maintenance to keep you cool and comfortable all summer long.',
        icon: 'tabler:snowflake',
      },
      {
        title: 'Preventive Maintenance',
        description:
          'Regular maintenance plans designed to extend system life, improve efficiency, and prevent costly emergency repairs.',
        icon: 'tabler:list-check',
      },
      {
        title: '24/7 Emergency Service',
        description:
          'We understand emergencies happen anytime. Our experienced technicians are available around the clock for urgent repairs.',
        icon: 'tabler:alert-circle',
      },
      {
        title: 'Indoor Air Quality',
        description:
          'Improve your home or business with air filtration, UV systems, humidifiers, and comprehensive air quality solutions.',
        icon: 'tabler:wind',
      },
      {
        title: 'Commercial HVAC',
        description:
          'Specialized services for commercial properties, including large-scale systems, maintenance contracts, and emergency support.',
        icon: 'tabler:building',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Why Choose Us"
    title="Local Expertise, Professional Service"
    items={[
      {
        title: 'Locally Owned & Operated',
        description:
          'Family-owned business serving McHenry County for over a decade with deep community roots and personalized service.',
      },
      {
        title: 'Licensed & Fully Insured',
        description:
          'All technicians are certified and trained to the highest standards, ensuring safe, compliant work on every job.',
      },
      {
        title: 'Transparent Pricing',
        description:
          'No hidden fees or surprise charges. We provide detailed estimates upfront so you know exactly what to expect.',
      },
    ]}
    image={{
      src: 'https://placecats.com/800/600',
      alt: 'Professional HVAC Technician',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Trusted by McHenry County Residents
      </h3>
      Your comfort and satisfaction are our top priority in every service call
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Energy-Efficient Systems',
        description: `Modern HVAC systems that reduce energy costs while maintaining optimal comfort levels year-round.`,
      },
      {
        title: 'Fast Response Times',
        description:
          'Quick scheduling and same-day or next-day service availability for most emergency repair requests in McHenry County.',
      },
      {
        title: 'Warranty Protection',
        description:
          'Comprehensive warranties on parts and labor with professional service guarantees for your peace of mind.',
      },
      {
        title: 'Expert Diagnostics',
        description:
          'Advanced diagnostic equipment and training to accurately identify issues and recommend the most cost-effective solutions.',
      },
    ]}
    image={{
      src: '~/assets/images/kettenreaktion-l_Vn4HlFQVw-unsplash.jpg',
      alt: 'HVAC System Maintenance',
    }}
  >
    <Fragment slot="content">
      <h6 class="text-md font-bold tracking-tight dark:text-white sm:text-lg mb-2">
        Keeping your systems running reliably and efficiently
      </h6></Fragment
    >

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Seasonal Maintenance Plans',
        description:
          'Customized maintenance agreements to keep your heating and cooling systems operating at peak efficiency all year long.',
      },
      {
        title: 'Technician Training & Certification',
        description:
          'Our team stays current with the latest HVAC technology and industry certifications to deliver quality service.',
      },
      {
        title: 'Customer Support',
        description:
          'Responsive customer service team ready to answer questions, schedule appointments, or address concerns promptly.',
      },
      {
        title: 'Satisfaction Guarantee',
        description: `We stand behind our work with a 100% satisfaction guarantee because your comfort is what matters most to us.`,
      },
    ]}
    image={{
      src: 'https://placecats.com/800/600',
      alt: 'Customer Satisfaction',
    }}
  >
    <Fragment slot="content">Your comfort is our commitment</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="How to Get Professional HVAC Service from Simmons"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Call or Request Online</span>',
        description:
          "Contact us by phone or fill out our online request form. We'll discuss your HVAC needs and find a time that works best for you.",
        icon: 'tabler:phone',
      },
      {
        title: 'Step 2: <span class="font-medium">Professional Diagnosis</span>',
        description:
          'Our licensed technicians arrive on time, assess your system, and provide a comprehensive diagnosis with transparent pricing.',
        icon: 'tabler:tools',
      },
      {
        title: 'Step 3: <span class="font-medium">Expert Service</span>',
        description:
          'We perform quality repairs, installation, or maintenance using industry best practices and the latest tools and techniques.',
        icon: 'tabler:check',
      },
      {
        title: 'Ready!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://placecats.com/800/600',
      alt: 'Professional HVAC Service Process',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Comprehensive Service Coverage"
    subtitle="From routine maintenance to complex repairs, we handle all your HVAC needs"
    tagline="What We Offer"
    items={[
      {
        title: 'Furnace Installation',
        description: 'Energy-efficient furnace installation and replacement with professional setup and testing.',
        icon: 'tabler:flame',
      },
      {
        title: 'AC Installation',
        description:
          'Expert air conditioning installation from sizing to ductwork optimization for maximum cooling efficiency.',
        icon: 'tabler:snowflake',
      },
      {
        title: 'Heat Pump Service',
        description:
          'Installation, repair, and maintenance of heat pumps for efficient year-round heating and cooling.',
        icon: 'tabler:thermometer',
      },
      {
        title: 'Boiler Service',
        description: 'Complete boiler installation, repair, and maintenance for commercial and residential properties.',
        icon: 'tabler:flame',
      },
      {
        title: 'Duct Cleaning',
        description:
          'Professional air duct cleaning to improve air quality and system efficiency throughout your property.',
        icon: 'tabler:wind',
      },
      {
        title: 'UV Air Purifiers',
        description:
          'Advanced air purification systems to eliminate bacteria, viruses, and allergens from your indoor air.',
        icon: 'tabler:sun',
      },
      {
        title: 'Humidity Control',
        description: 'Humidifier and dehumidifier installation and service for optimal indoor comfort and air quality.',
        icon: 'tabler:droplet',
      },
      {
        title: 'Smart Thermostats',
        description: 'Installation of programmable and smart thermostats for improved comfort and energy savings.',
        icon: 'tabler:smart-home',
      },
      {
        title: 'Commercial Solutions',
        description:
          'Specialized services for retail, office, and industrial properties with maintenance contracts available.',
        icon: 'tabler:building-store',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- HighlightedPosts Widget ******* -->

  <!-- <BlogLatestPosts
    title="HVAC Tips & Maintenance Guides"
    information={`Check out our blog for helpful tips on maintaining your heating and cooling systems, seasonal preparation advice, energy savings strategies, and updates about industry best practices to keep your home or business comfortable year-round.`}
  /> -->

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Find answers to common questions about our HVAC services, pricing, maintenance, and more."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'How often should I have my HVAC system serviced?',
        description:
          'We recommend professional maintenance at least twice a year—once before heating season and once before cooling season. Regular maintenance improves efficiency, extends system life, and prevents costly emergency repairs.',
      },
      {
        title: 'Do you offer emergency services?',
        description:
          "Yes! We provide 24/7 emergency HVAC services for heating and cooling emergencies. Contact us anytime, and we'll prioritize your repair as quickly as possible.",
      },
      {
        title: 'How long do HVAC systems typically last?',
        description:
          'Modern HVAC systems typically last 15-20 years with proper maintenance. Furnaces last 15-20 years, air conditioners 10-15 years, and heat pumps 15-20 years. We can help evaluate if replacement or repair is best for your system.',
      },
      {
        title: 'What can I do to improve energy efficiency?',
        description:
          'Regular maintenance, upgrading to a smart thermostat, sealing air leaks, improving insulation, and considering a newer high-efficiency system all help reduce energy costs. Our team can assess your home and recommend solutions.',
      },
      {
        title: 'Do you service commercial properties?',
        description:
          'Absolutely! We provide comprehensive HVAC services for retail, office, restaurant, and industrial properties, including maintenance contracts designed to keep your systems running reliably.',
      },
      {
        title: 'What areas do you serve?',
        description:
          'We service McHenry, Illinois and surrounding areas in McHenry County. Visit our Service Areas page for specific towns and neighborhoods we cover, or call to confirm service availability.',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Years Serving McHenry', amount: '10+' },
      { title: 'Satisfied Customers', amount: '5K+' },
      { title: '24/7 Emergency Service', amount: '365' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Request a Quote Today',
        href: '/contact',
        icon: 'tabler:phone',
      },
    ]}
  >
    <Fragment slot="title">
      Ready for Reliable<br class="block sm:hidden" />{' '}<span class="sm:whitespace-nowrap">HVAC Service?</span>
    </Fragment>

    <Fragment slot="subtitle">
      Contact Simmons Heating & Air today for professional service in McHenry County. <br
        class="hidden md:inline"
      />Call us anytime—we're here to help!
    </Fragment>
  </CallToAction>
</Layout>
